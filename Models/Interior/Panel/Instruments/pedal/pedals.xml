<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <!-- Left pedal -->
  <model>
    <name>LeftPedal</name>
    <path>Aircraft/Gloster-Gladiator/Models/Interior/Panel/Instruments/pedal/pedal.xml</path>
    <offsets>
      <x-m>  0.00 </x-m>
      <y-m> -0.11 </y-m>
      <z-m>  0.00 </z-m>
    </offsets>
  </model>
  
  <!-- Right pedal -->
  <model>
    <name>RightPedal</name>
    <path>Aircraft/Gloster-Gladiator/Models/Interior/Panel/Instruments/pedal/pedal.xml</path>
    <offsets>
      <x-m> 0.00 </x-m>
      <y-m> 0.11 </y-m>
      <z-m> 0.00 </z-m>
    </offsets>
  </model>
  
  <animation>
    <type>rotate</type>
    <object-name>LeftPedal</object-name>
    <property>/controls/flight/rudder</property>
    <factor> 25 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>RightPedal</object-name>
    <property>/controls/flight/rudder</property>
    <factor> -25 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation> 

</PropertyList>
